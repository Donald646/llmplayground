{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "..",
    "declaration": true,
    "paths": {
      "@lib/polymarket/*": ["../lib/polymarket/*"]
    }
  },
  "include": ["src/**/*", "../lib/polymarket/**/*"]
}
